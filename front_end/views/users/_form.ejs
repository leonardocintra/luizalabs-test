<div id="form-user-component" v-show="isForm">
    <form v-on="submit: submit">
        <input type="hidden" id="id_fb_id" v-model="user.fb_id" class="form-control">
        <div class="form-group">
            <label for="id_fb_id" class="control-label">Facebook ID</label>
            <span class="form-control">{{ user.fb_id }}</span>
        </div>

        <div class="form-group" v-class="has-error : !validation.name">
            <label for="name" class="control-label">Nome</label>
            <input type="text" id="id_name" v-model="user.name | nameValidator" class="form-control">
            <span class="help-block" v-show="!validation.name">Nome é um campo obrigatório.</span>
        </div>

        <div class="form-group">
            <label for="username" class="control-label">Usuário</label>
            <input type="text" id="id_username" v-model="user.username" class="form-control">
        </div>

        <div class="form-group">
            <div class="row clearfix">
                <div class="col-sm-6" v-class="has-error: !validation.gender">
                    <label for="id_gender" class="control-label">Sexo</label>
                    <select id="id_gender" v-model="user.gender | genderValidator" class="form-control">
                        <option value="">Selecione</option>
                        <option value="male">Masculino</option>
                        <option value="female">Feminino</option>
                    </select>
                    <span class="help-block" v-show="!validation.gender">Sexo é um campo obrigatório.</span>
                </div>

                <div class="col-sm-6" v-class="has-error: !validation.birthday">
                    <label for="id_birthday" class="control-label">Data de Nascimento</label>
                    <input type="date" id="id_birthday" v-model="user.birthday | birthdayValidator" class="form-control">
                    <span class="help-block" v-show="!validation.birthday">Data de Nascimento é um campo obrigatório.</span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="#" class="btn btn-default" v-on="click: cancel">Cancelar</a>
        </div>
    </form>
</div>
